{
  "buildCommand": "pnpm --filter kukai-ramen-web exec nuxt build",
  "installCommand": "npm install -g pnpm@9.15.0 && pnpm install --ignore-scripts",
  "framework": "nuxtjs",
  "headers": [
    {
      "source": "/_nuxt/(.*\\.css)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/css; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/_nuxt/(.*\\.js)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/_nuxt/(.*\\.mjs)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "env": {
    "PNPM_REGISTRY": "https://registry.npmjs.org/",
    "SANITY_STUDIO_PROJECT_ID": "g90bn5yd",
    "SANITY_STUDIO_DATASET": "production",
    "SANITY_STUDIO_API_VERSION": "v2025-07-24"
  }
}

