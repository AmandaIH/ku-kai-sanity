{
  "buildCommand": "cd apps/web && npm run build",
  "installCommand": "cd apps/web && npm install --omit=optional --legacy-peer-deps",
  "framework": "nuxtjs",
  "functions": {
    "apps/web/app/**": {
      "runtime": "nodejs20.x"
    }
  },
  "env": {
    "npm_config_optional": "false",
    "npm_config_omit": "optional"
  }
}

